{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "客户分析工具",
  "version": "1.0.0",
  "identifier": "com.wytools.customer-analyzer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:fe",
    "beforeBuildCommand": "npm run build:fe"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "客户分析工具",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {}
}
